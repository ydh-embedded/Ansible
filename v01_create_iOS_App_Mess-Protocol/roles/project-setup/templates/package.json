{
  "name": "{{ project_name | lower | replace(' ', '-') }}",
  "version": "{{ version_name }}",
  "description": "{{ project_name }} - iOS/Android Monitoring App generated by Ansible Project Generator v{{ script_version }}",
  "main": "src/index.html",
  "author": {
    "name": "{{ author_name }}",
    "email": "{{ author_email }}"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/{{ github_username }}/{{ project_name }}.git"
  },
  "scripts": {
    "start": "ionic serve",
    "serve": "ionic serve --host=0.0.0.0",
    "build": "ionic build",
    "build:prod": "ionic build --prod",
    "sync": "ionic cap sync",
    "sync:ios": "ionic cap sync ios",
    "sync:android": "ionic cap sync android",
    "ios": "ionic cap run ios",
    "android": "ionic cap run android",
    "ios:device": "ionic cap run ios --device",
    "android:device": "ionic cap run android --device",
    "add:ios": "ionic cap add ios",
    "add:android": "ionic cap add android",
    "open:ios": "ionic cap open ios",
    "open:android": "ionic cap open android",
    "copy": "ionic cap copy",
    "copy:ios": "ionic cap copy ios",
    "copy:android": "ionic cap copy android"{% if enable_quality %},
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "format": "prettier --write src/**/*.{js,ts,html,css,json}",
    "format:check": "prettier --check src/**/*.{js,ts,html,css,json}"{% endif %}{% if enable_cicd %},
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"{% endif %}{% if enable_build %},
    "optimize": "npm run build:prod && npm run minify",
    "minify": "terser src/js/*.js --compress --mangle -o dist/js/app.min.js"{% endif %}{% if enable_analytics %},
    "analyze": "npm run build && npx webpack-bundle-analyzer dist/static/js/*.js",
    "stats": "npm run build -- --stats-json && npx webpack-bundle-analyzer dist/stats.json"{% endif %}
  },
  "dependencies": {
    "@ionic/core": "^{{ ionic_version }}",
    "@capacitor/core": "^{{ capacitor_version }}",
    "@capacitor/app": "^{{ capacitor_version | regex_replace('^(\\d+)', '\\1') }}.0.6",
    "@capacitor/haptics": "^{{ capacitor_version | regex_replace('^(\\d+)', '\\1') }}.0.6",
    "@capacitor/keyboard": "^{{ capacitor_version | regex_replace('^(\\d+)', '\\1') }}.0.6",
    "@capacitor/status-bar": "^{{ capacitor_version | regex_replace('^(\\d+)', '\\1') }}.0.6",
    "@capacitor/splash-screen": "^{{ capacitor_version | regex_replace('^(\\d+)', '\\1') }}.0.5",
    "chart.js": "^{{ chart_js_version }}"{% if enable_analytics %},
    "google-analytics": "^0.4.1",
    "mixpanel-browser": "^2.47.0"{% endif %}
  },
  "devDependencies": {
    "@ionic/cli": "^7.1.0",
    "@capacitor/cli": "^{{ capacitor_version }}",
    "@capacitor/ios": "^{{ capacitor_version }}",
    "@capacitor/android": "^{{ capacitor_version }}"{% if enable_quality %},
    "eslint": "^8.50.0",
    "@eslint/js": "^8.50.0",
    "prettier": "^3.0.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "typescript": "^5.2.2"{% endif %}{% if enable_cicd %},
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "ts-jest": "^29.1.1"{% endif %}{% if enable_build %},
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-bundle-analyzer": "^4.9.1",
    "terser": "^5.19.4",
    "html-minifier": "^4.0.0",
    "cssnano": "^6.0.1"{% endif %}
  },
  "keywords": [
    "ionic",
    "capacitor",
    "mobile",
    "ios",
    "android",
    "web",
    "monitoring",
    "dashboard",
    "typescript",
    "javascript",
    "pwa"
  ],
  "engines": {
    "node": ">={{ node_version }}",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "Chrome >=60",
    "Safari >=12",
    "iOS >=12",
    "Android >=6"
  ]{% if enable_cicd %},
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.{js,ts}",
      "**/?(*.)+(spec|test).{js,ts}"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts"
    ]
  }{% endif %}
}